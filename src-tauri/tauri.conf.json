{
  "$schema": "https://raw.githubusercontent.com/nicell/tauri-v2-schema/main/tauri.conf.json",
  "productName": "Cykel",
  "version": "0.1.0",
  "identifier": "com.cykel.app",
  "build": {
    "frontendDist": "../pwa",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "windows": [
      {
        "title": "Cykel",
        "width": 400,
        "height": 740,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "withGlobalTauri": true,
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ]
  }
}
